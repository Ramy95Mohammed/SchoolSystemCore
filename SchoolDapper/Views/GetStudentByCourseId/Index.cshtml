@model StudentCourse
@{
    ViewData["Title"] = "Index";
}

<h1>ShowStudentCourse</h1>
<script src="~/lib/jquery/dist/jquery.js"></script>

<div class="form-group">
    <label asp-for="CourseId" class="control-label"></label>
    <select asp-for="CourseId" id="course" class="control-label" asp-items="@(new SelectList(Model.courses,"CourseId","Title"))"></select>
    <span asp-validation-for="CourseId" class="text-danger"></span>

    <div id="GetStudentById">
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function() {
        debugger
        $("#course").on('change', function () {
            debugger
            var courseId = $("#course").val();
                $.ajax({
                    type: "Get",
                    url: '@Url.Action("GetStudentById", "GetStudentByCourseId")/' + courseId,
                    success: function (result) {
                        $("#GetStudentById").html(result);
                    }

                });
        });

    }); 

    
</script>