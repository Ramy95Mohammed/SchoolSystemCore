@model StudentCourse
@{
    ViewData["Title"] = "Index";
}

<h1>ShowStudentCourse</h1>
<script src="~/lib/jquery/dist/jquery.js"></script>
<div class="form-group">
    <label asp-for="StudentId" class="control-label"></label>
    <select asp-for="StudentId" id="student" class="btn btn-secondary dropdown-toggle dropdown-toggle-split" asp-items="@(new SelectList(Model.students, "StudentId", "FirstName" )) "></select>
    <span asp-validation-for="StudentId" class="text-danger"></span>
</div>
<div id="GetstudenCourses">
</div>


<script type="text/javascript">
    $(document).ready(function () {
        $("#student").on('change', function () {
             var studentId = $("#student").val();
                $.ajax({
                    type: "Get",
                    url: '@Url.Action("GetstudentCourses", "GetCourseByStudentId")/' + studentId,
                    success: function (result) {
                        $("#GetstudenCourses").html(result);
                    }
                });
         });
    });
   
</script>
